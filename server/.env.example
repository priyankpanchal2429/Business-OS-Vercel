# Server Environment Configuration Template
# Copy this to .env.production or .env.development and configure

# Node Environment
NODE_ENV=development

# Server Port
PORT=3000

# Data File Path (relative to server directory)
# Production: ./data/data.production.json
# Development: ./data/data.development.json
DATA_FILE=./data/data.development.json

# Upload Directories
UPLOADS_DIR=./uploads
ARCHIVES_DIR=./archives/payslips

# Backup Settings
BACKUP_ENABLED=true
BACKUP_INTERVAL_HOURS=24
